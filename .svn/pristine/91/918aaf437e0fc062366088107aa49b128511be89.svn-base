<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.op_dfat.Fragment_new">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/analysisTextInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:id="@+id/analysisTextInfo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/analysisTextInfo"
            android:text="@string/startScan"
            android:id="@+id/startStopScan"
            android:layout_centerHorizontal="true"
            android:onClick="startStopAnalyzing"/>

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@+id/startStopScan"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@drawable/analyzer"
            android:layout_marginTop="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/textView3"
            android:text='Analyzing...\nPress "Scan stoppen" to evaluate the analysis'/>

    </RelativeLayout>
</FrameLayout>
